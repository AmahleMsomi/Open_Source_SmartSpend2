<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041E35"
    tools:context=".LogIN">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="386dp"
        android:layout_height="384dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smartspend" />

    <EditText
        android:id="@+id/editTextUsernameLogin"
        android:layout_width="556dp"
        android:layout_height="65dp"
        android:backgroundTint="#374151"
        android:hint="Username"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="530dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextPasswordLogin"
        android:layout_width="572dp"
        android:layout_height="62dp"
        android:backgroundTint="#374151"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="627dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="567dp"
        android:layout_height="58dp"
        android:backgroundTint="#374151"
        android:text="Login"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="747dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonBackLogin"
        android:layout_width="567dp"
        android:layout_height="58dp"
        android:layout_gravity="start"
        android:backgroundTint="#374151"
        android:text="Back"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="858dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>